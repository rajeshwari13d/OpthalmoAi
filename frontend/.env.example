# Example Environment Variables for Production Frontend

# API Configuration - Update with your production API URL
REACT_APP_API_BASE_URL=https://your-api-domain.com
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000

# App Configuration
REACT_APP_NAME=OpthalmoAI
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION="AI-driven predictive ophthalmology platform"

# Feature Flags - Enable/disable features
REACT_APP_ENABLE_CAMERA=true
REACT_APP_ENABLE_BATCH_UPLOAD=true
REACT_APP_ENABLE_REPORT_DOWNLOAD=true
REACT_APP_ENABLE_HISTORY=true

# Production Settings
REACT_APP_DEBUG_MODE=false
REACT_APP_MOCK_API=false
REACT_APP_LOG_LEVEL=info

# Firebase Configuration (Optional - for future use)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=123456789
REACT_APP_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Analytics - Add your tracking IDs
REACT_APP_GA_TRACKING_ID=G-XXXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Medical Compliance - Update URLs
REACT_APP_MEDICAL_DISCLAIMER="This is an assistive screening tool and is NOT a substitute for professional medical diagnosis. Always consult with a qualified healthcare professional."
REACT_APP_PRIVACY_POLICY_URL=https://yourdomain.com/privacy
REACT_APP_TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_FILE_TYPES=".jpg,.jpeg,.png,.bmp"

# Build Optimization
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false