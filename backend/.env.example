# Example Environment Variables for Production Backend

# Application Settings
SECRET_KEY=your_super_secret_key_change_this_in_production
DEBUG=false
ENVIRONMENT=production

# CORS Settings (Add your frontend domain)
CORS_ORIGINS=["http://localhost:3000", "https://your-frontend-domain.com"]

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=OpthalmoAI
PROJECT_VERSION=1.0.0

# AI Model Configuration
MODEL_PATH=./models/retinopathy_model.pth
MODEL_DEVICE=cpu
CONFIDENCE_THRESHOLD=0.7
BATCH_SIZE=1

# Image Processing Settings
MAX_IMAGE_SIZE_MB=10
ALLOWED_IMAGE_TYPES=["jpeg", "jpg", "png"]
TEMP_FOLDER=/tmp/opthalmo_temp
AUTO_DELETE_TEMP_FILES=true

# Database Configuration (Optional - for future use)
DATABASE_URL=postgresql://user:password@localhost/opthalmoai
POSTGRES_USER=opthalmo_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_DB=opthalmoai

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=redis_password_123

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Healthcare Compliance
ENABLE_AUDIT_LOGGING=true
DATA_RETENTION_DAYS=0
ANONYMIZE_LOGS=true
HIPAA_COMPLIANCE_MODE=true

# Email Settings (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM_ADDRESS=noreply@opthalmoai.com

# Security Settings
SESSION_EXPIRE_MINUTES=30
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_PER_MINUTE=60

# Cloud Storage (Optional)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_BUCKET_NAME=opthalmo-ai-storage
AWS_REGION=us-east-1

# Monitoring (Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
PROMETHEUS_METRICS_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health